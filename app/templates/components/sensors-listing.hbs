<table class="u-full-width">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Dernière valeur</th>
            <th>Unité</th>
        </tr>
    </thead>
    <tbody>
        {{#each sensors as |sensor|}}
        <tr>
            <td>
                {{#link-to "sensor" sensor}}
                {{sensor.name}}
                {{/link-to}}
            </td>
            <td>
                {{#link-to "sensor" sensor}}
                {{sensor.last}}
                {{/link-to}}
            </td>
            <td>                
                {{#link-to "sensor" sensor}}
                {{sensor.unit}}
                {{/link-to}}
            </td>

        </tr>
        {{/each}}

    </tbody>
</table>
